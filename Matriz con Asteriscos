package matriz;

import java.util.Scanner;

/**
 *
 * @author Diego
 */
public class Matriz {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        // TODO code application logic here
   
    Scanner teclado = new Scanner(System.in);
    System.out.println( " Ingresar tamaÃ±o de la matriz : ") ;  //Pregunta para el usuario.
    int n1 = teclado.nextInt(); //Validar el cacter o valor qie se introduce por el usuario.
      System.out.println(); // Salto de linea.
      
      System.out.println( " Figura 1") ; // Texto de visualizacion. 
      if (n1 >= 0 && n1 <= 50 ) { //Condicional, validar numero de 0 hasta 50
      // Linea superior    
    } for(int i = 0; i <n1 - n1-1; i++){System.out.print(" ");}System.out.print(" *"); //Bucle de repeticion, colocar un * en la primera posicion y lo demas dejar en blanco.
      for(int j = 0; j < n1 + n1 - 2; j++){ System.out.print(" ");}System.out.println(" *"); //Bucle de repeticion, colocar un * en la ultima posicion, lo demas dejar en blanco y dar un salto de linea
      // linea Central
      for(int i = 0; i < n1 - n1 + 2 ; i++){System.out.print(" ");}System.out.print(" *"); //Bucle de repeticion, colocar un * en la segunda posicion y lo demas dejar en blanco.
      for(int j = 0; j < n1 - n1 + 4 ; j++){System.out.print(" ");}System.out.println(" *"); //Bucle de repeticion, colocar un * en la penultima posicion, lo demas dejar en blanco y dar un salto de linea.
      for(int i = 0; i < n1 - n1 + 5 ; i++){System.out.print(" ");}System.out.println(" *"); //Bucle de repeticion, colocar un * en la posicion central, lo demas dejar en blanco y dar un salto de linea.
      for(int i = 0; i < n1 - n1 + 2 ; i++){System.out.print(" ");}System.out.print(" *"); //Bucle de repeticion, colocar un * en la segunda posicion, lo demas dejar en blanco.
      for(int j = 0; j < n1 - n1 + 4 ; j++){System.out.print(" ");}System.out.println(" *"); //Bucle de repeticion, colocar un * en la penultima posicion y lo demas dejar en blanco
      // Linea Inferior 
      for(int i = 0; i < n1 - n1 - 1; i++){System.out.print(" ");}System.out.print(" *"); //Bucle de repeticion, colocar un * en la primera posicion y lo demas dejar en blanco.
      for(int j = 0; j < n1 + n1 - 1 ; j++){System.out.print(" ");}System.out.println(" *");//Bucle de repeticion, colocar un * en la ultima posicion, lo demas dejar en blanco y dar un salto de linea.
      
      System.out.println( " Figura 2") ; // Texto de visualizacion.
      // Linea Superior
      for (int i = 0; i < n1; i++){ System.out.print (" *"); }System.out.println(); //Bucle de repeticion, LLenar la primera linea de * y dar un salto de linea
      //Linea Central
      for (int i = 0; i < n1-2; i++) { System.out.print (" *");}System.out.println(" *"); //Bucle de repeticion, LLenar la primera linea de * a exepcion de la ultima posicion y dar un salto de linea
      for (int j = 0; j < n1-3; j++) { System.out.print (" *");}System.out.println(" *"); //Bucle de repeticion, LLenar la siguiente linea de * a exepcion de las dos ultimas posiciones y dar un salto de linea
      for (int i = 0; i < n1-3; i++){ System.out.print (" *");}//Bucle de repeticion, LLenar la siguiente linea de * a exepcion de las 3 ultimas posiciones
      for (int i = 0; i < n1-5; i++) { System.out.print (" *"); } System.out.println (" ");//Bucle de repeticion, LLenar la siguiente linea de * a exepcion de las 4 ultimas posiciones 
      //Linea Inferior
      for (int i = 0; i < n1 - n1 + 1 ; i++) { System.out.print (" *");} System.out.println();//Bucle de repeticion, LLenar solo la primer possicion de *
      
      System.out.println( " Figura 3 ") ;// Texto de visualizacion.
      // Linea Superior
      for (int i = 0; i < n1; i++){ System.out.print (" *");}System.out.println(); //Bucle de repeticion, LLenar toda la fila de *
      // Linea Cntral 
      for (int i = 0; i < n1-2; i++) { System.out.print (" *"); // Dejar en blanco las posiciones del centro a exepcion de la primera y ultima posicion
      for (int j = 0; j < n1-2; j++) { System.out.print ("  "); } System.out.println(" *"); } // 
      // Linea Inferior
      for (int i = 0; i < n1; i++){ System.out.print (" *");} System.out.println();} } //Bucle de repeticion, LLenar toda la fila de *
